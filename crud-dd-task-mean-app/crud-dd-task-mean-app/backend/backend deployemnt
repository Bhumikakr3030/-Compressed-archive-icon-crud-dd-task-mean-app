# Complete backend deployment (build + start)
docker-compose up -d --build backend

# Verify deployment
curl http://localhost:3000/
# Expected: {"message":"Welcome to DD Task application."}

# Build only backend
docker-compose build backend

# Build and start backend with dependencies
docker-compose up -d --build backend

# Force rebuild backend
docker-compose build --no-cache backend

# Start backend only (already built)
docker-compose up -d backend

# Test root endpoint
curl http://localhost:3000/

# Test tutorials API
curl http://localhost:3000/api/tutorials/

# Test MongoDB connection
docker-compose exec backend node -e "
require('./app/models/index.js');
console.log('Backend models loaded successfully');"
